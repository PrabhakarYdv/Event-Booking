<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1C9C9"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/firstName"
            style="@style/display_entry"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:text="" />

        <TextView
            android:id="@+id/lastName"
            style="@style/display_entry"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/firstName"
            android:text="" />

        <TextView
            android:id="@+id/_email_"
            style="@style/display_entry"
            android:layout_below="@id/firstName"
            android:text="" />

        <TextView
            android:id="@+id/_phone_"
            style="@style/display_entry"
            android:layout_below="@id/_email_"
            android:text="" />


        <EditText
            android:id="@+id/noOfSeats"
            style="@style/booking_Entry"
            android:layout_below="@id/_phone_"
            android:hint="how many seats"
            android:inputType="number" />

        <EditText
            android:id="@+id/DateOfShow"
            style="@style/booking_Entry"
            android:layout_below="@id/noOfSeats"
            android:layout_marginTop="25dp"
            android:hint="Chose Date(DD//MM//YYYY)"
            android:inputType="datetime" />


        <Button
            android:id="@+id/preview_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noOfSeats"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="120dp"
            android:backgroundTint="#BC1C2B"
            android:fontFamily="@font/bungee"
            android:inputType="datetime"
            android:paddingHorizontal="90dp"
            android:text="Preview"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>