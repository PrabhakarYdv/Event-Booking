<resources xmlns:tools="http://schemas.android.com/tools">
    <string name="app_name">Event Booking</string>

    <style name="booking_option">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="booking_Entry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">50dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@drawable/border_form</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">30dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="display_entry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">20dp</item>
        <item name="android:textColor">#655656</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
