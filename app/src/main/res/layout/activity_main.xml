<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstName_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/bungee"
            android:gravity="center_horizontal"
            android:text="BOOK EVENT"
            android:textColor="#EA0606"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/firstName_option"
            style="@style/booking_option"
            android:layout_below="@+id/heading"
            android:text="First Name :" />

        <TextView
            android:id="@+id/lastName_option"
            style="@style/booking_option"
            android:layout_below="@id/firstName_box"
            android:text="Last Name :" />

        <TextView
            android:id="@+id/email_option"
            style="@style/booking_option"
            android:layout_below="@+id/lastName_box"
            android:text="Email :" />

        <TextView
            android:id="@+id/Phone_option"
            style="@style/booking_option"
            android:layout_below="@+id/email_box"
            android:text="Phone Number :" />

        <EditText
            android:id="@+id/firstName_box"
            style="@style/booking_Entry"
            android:layout_below="@id/firstName_option"
            android:hint="Enter the first name" />

        <EditText
            android:id="@+id/lastName_box"
            style="@style/booking_Entry"
            android:layout_below="@+id/lastName_option"
            android:hint="Enter the last name" />

        <EditText
            android:id="@+id/email_box"
            style="@style/booking_Entry"
            android:layout_below="@id/email_option"
            android:hint="Enter the email" />

        <EditText
            android:id="@+id/phoneNumber_box"
            style="@style/booking_Entry"
            android:inputType="number"
            android:layout_below="@id/Phone_option"
            android:hint="Enter the phone number" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneNumber_box"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="50dp"
            android:backgroundTint="#BC1C2B"
            android:fontFamily="@font/bungee"
            android:paddingHorizontal="90dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>